<%- include('../partials/header') %>
</head>
<body class="bg-light min-vh-100 d-flex flex-column">
<%- include('../partials/nav') %>

<div class="container mt-4">

  <% if (currentUserRole === 'owner') { %>
    <div class="d-flex justify-content-between align-items-center mb-3">
      <h4 class="fw-bold mb-0 text-gradient"><%= viewAll ? "All Properties" : "My Properties" %></h4>
      <% if (!viewAll) { %>
        <a href="/properties?viewAll=true" class="btn btn-outline-primary btn-sm rounded-pill shadow-sm">View All Properties</a>
      <% } else { %>
        <a href="/properties" class="btn btn-outline-secondary btn-sm rounded-pill shadow-sm">View My Properties</a>
      <% } %>
    </div>
  <% } else { %>
    <h4 class="fw-bold mb-3 text-gradient">Explore Properties</h4>
  <% } %>

  <!-- üîç Filters -->
  <form method="GET" action="/properties" class="row gy-2 gx-3 align-items-center bg-white p-3 rounded-4 shadow-lg animate__animated animate__fadeIn">
    <div class="col-12 col-md-3">
      <input type="text" name="q" value="<%= q %>" class="form-control form-control-sm" placeholder="Search title or keyword">
    </div>
    <div class="col-6 col-md-2">
      <input type="text" name="city" value="<%= city %>" class="form-control form-control-sm" placeholder="City">
    </div>
    <div class="col-6 col-md-2">
      <select name="category" class="form-select form-select-sm">
        <option value="">All Types</option>
        <option value="House" <%= category === 'House' ? 'selected' : '' %>>House</option>
        <option value="Apartment" <%= category === 'Apartment' ? 'selected' : '' %>>Apartment</option>
        <option value="Villa" <%= category === 'Villa' ? 'selected' : '' %>>Villa</option>
      </select>
    </div>
    <div class="col-6 col-md-2">
      <input type="number" name="minPrice" value="<%= minPrice %>" class="form-control form-control-sm" placeholder="Min Price">
    </div>
    <div class="col-6 col-md-2">
      <input type="number" name="maxPrice" value="<%= maxPrice %>" class="form-control form-control-sm" placeholder="Max Price">
    </div>
    <div class="col-12 col-md-1 d-grid">
      <button type="submit" class="btn btn-primary btn-sm w-100 rounded-pill shadow-sm">
        <i class="bi bi-search"></i>
      </button>
    </div>
  </form>

  <!-- üèò Properties Section -->
  <div class="row g-4 mt-4">
    <% if (properties.length === 0) { %>
      <div class="col-12 text-center text-muted py-5">
        <i class="bi bi-house-slash display-4 mb-3"></i><br>
        No properties found
      </div>
    <% } else { %>
      <% properties.forEach(p => { %>
        <div class="col-12 col-sm-6 col-md-4 col-lg-3 d-flex">
          <div class="property-card card border-0 rounded-4 shadow-sm position-relative overflow-hidden animate__animated animate__fadeInUp flex-fill">
            
            <!-- Status Badge -->
            <% if (p.status === 'rented') { %>
              <span class="status-badge bg-success text-white shadow-sm">Rented</span>
            <% } else if (p.status === 'available') { %>
              <span class="status-badge bg-primary text-white shadow-sm">Available</span>
            <% } else if (p.status === 'pending' && currentUserRole === 'owner') { %>
              <span class="status-badge bg-warning text-dark shadow-sm">Pending</span>
            <% } %>

            <!-- Property Image -->
            <a href="/properties/<%= p._id %>" class="text-decoration-none">
              <div class="image-wrapper">
                <img src="<%= p.images[0] || '/placeholder.png' %>" 
                     alt="<%= p.title %>" 
                     class="property-img">
              </div>
            </a>

            <!-- Card Body -->
            <div class="card-body d-flex flex-column p-3">
              <h6 class="card-title text-truncate mb-1">
                <a href="/properties/<%= p._id %>" class="text-decoration-none text-dark fw-bold hover-text fs-6">
                  <%= p.title %>
                </a>
              </h6>
              <p class="small text-muted mb-2">
                <i class="bi bi-geo-alt-fill text-danger me-1"></i>
                <%= p.location.city %>, <%= p.location.state || '' %>
              </p>

              <% if (p.description) { %>
                <p class="small text-muted flex-grow-1">
                  <%= p.description.substring(0, 60) %>...
                </p>
              <% } else { %>
                <div class="flex-grow-1"></div>
              <% } %>

              <!-- Amenities -->
              <div class="mb-2">
                <% if (p.amenities && p.amenities.length) { %>
                  <% p.amenities.slice(0, 2).forEach(a => { %>
                    <span class="badge bg-light text-dark border me-1 mb-1"><%= a %></span>
                  <% }) %>
                  <% if (p.amenities.length > 2) { %>
                    <span class="badge bg-gradient text-light" style="background: linear-gradient(90deg,#6f42c1,#6610f2);">
                      +<%= p.amenities.length - 2 %>
                    </span>
                  <% } %>
                <% } %>
              </div>

              <!-- Price -->
              <p class="fw-bold text-success mb-2 fs-6">
                Rs <%= p.price.toLocaleString() %>
                <small class="text-muted"> / <%= p.rentType === 'perNight' ? 'night' : 'month' %></small>
              </p>

              <!-- Footer Info -->
              <div class="d-flex justify-content-between align-items-center">
                <small class="text-muted">
                  üõè <%= p.bedrooms %> &nbsp; | &nbsp; üõÅ <%= p.bathrooms %>
                </small>
                <% if (p.featured) { %>
                  <span class="badge bg-warning text-dark shadow-sm">‚òÖ</span>
                <% } %>
              </div>

              <!-- Read More Button -->
              <a href="/properties/<%= p._id %>" class="btn btn-gradient btn-sm mt-3 w-100 rounded-pill">
                <i class="bi bi-info-circle me-1"></i> Read More
              </a>
            </div>
          </div>
        </div>
      <% }) %>
    <% } %>
  </div>

  <!-- üìÑ Pagination -->
  <% if (total > limit) { %>
    <nav aria-label="Page navigation" class="mt-4">
      <ul class="pagination justify-content-center flex-wrap">
        <% const totalPages = Math.ceil(total / limit); %>
        <% for (let i = 1; i <= totalPages; i++) { %>
          <li class="page-item <%= i === page ? 'active' : '' %>">
            <a class="page-link" href="?page=<%= i %>
              <% if (q) { %>&q=<%= q %><% } %>
              <% if (city) { %>&city=<%= city %><% } %>
              <% if (category) { %>&category=<%= category %><% } %>
              <% if (minPrice) { %>&minPrice=<%= minPrice %><% } %>
              <% if (maxPrice) { %>&maxPrice=<%= maxPrice %><% } %>
              <% if (viewAll) { %>&viewAll=<%= viewAll %><% } %>">
              <%= i %>
            </a>
          </li>
        <% } %>
      </ul>
    </nav>
  <% } %>
</div>

<style>
  /* ‚ú® Animated Styling */
  .property-card {
    background: rgba(255,255,255,0.95);
    backdrop-filter: blur(10px);
    transition: transform 0.4s ease, box-shadow 0.4s ease;
    border: 1px solid rgba(0,0,0,0.05);
    display: flex;
    flex-direction: column;
    height: 100%;
  }
  .property-card:hover {
    transform: translateY(-8px) scale(1.02);
    box-shadow: 0 10px 25px rgba(0,0,0,0.15);
  }
  .image-wrapper {
    overflow: hidden;
    height: 180px;
  }
  .property-img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.6s ease;
  }
  .property-card:hover .property-img {
    transform: scale(1.12);
  }
  .status-badge {
    position: absolute;
    top: 12px;
    right: 12px;
    padding: 6px 14px;
    border-radius: 30px;
    font-size: 0.75rem;
    font-weight: 600;
  }
  .card-body {
    display: flex;
    flex-direction: column;
    flex-grow: 1;
  }
  .btn-gradient {
    background: linear-gradient(90deg, #0d6efd, #6610f2);
    color: white;
    border: none;
    transition: all 0.3s ease;
    margin-top: auto;
  }
  .btn-gradient:hover {
    background: linear-gradient(90deg, #6610f2, #0d6efd);
    transform: translateY(-2px);
    box-shadow: 0 4px 12px rgba(13,110,253,0.3);
  }
  .hover-text:hover {
    color: #6610f2;
    text-shadow: 0 0 6px rgba(102,16,242,0.3);
  }
  .text-gradient {
    background: linear-gradient(90deg, #0d6efd, #6610f2);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
  }

  /* Responsive fix for equal height columns */
  @media (max-width: 767px) {
    .col-sm-6, .col-md-4, .col-lg-3 {
      display: flex;
    }
  }
</style>

</body>
</html>
